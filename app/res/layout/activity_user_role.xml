<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.UserRoleActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="30dp"
        android:layout_margin="20dp"
        android:textStyle="bold"
        android:text="Choose Your Role"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2">

        <RelativeLayout android:padding="19dp"
            android:background="@color/white"
            android:layout_margin="10dp">

            <ImageView
                android:id="@+id/admin"
                android:layout_width="130dp"
                android:layout_height="90dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/user" />
            <Button
                android:id="@+id/AdminBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/admin"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="300dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:paddingHorizontal="28dp"
                android:text="Admin"
                android:textSize="20dp"
                app:layout_constraintStart_toEndOf="@+id/admin" />
        </RelativeLayout>

        <RelativeLayout android:padding="18dp"
            android:background="@color/white"
            android:layout_margin="10dp">
            <ImageView
                android:id="@+id/user"
                android:layout_width="130dp"
                android:layout_height="90dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/user" />
            <Button
                android:id="@+id/UserBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="300dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:paddingHorizontal="33dp"
                android:text="User"
                android:textSize="20dp"
                app:layout_constraintStart_toEndOf="@+id/user" />
        </RelativeLayout>

    </GridLayout>
</LinearLayout>
